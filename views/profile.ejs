<!doctype html>
<html id="h">
<head>
    <title>Style</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel=“stylesheet” href="font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body id="profile">
<div class="container">

    <div class="page-header text-center">

        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div id="box" class="col-sm-6">
            <div id="innerBox" class="well">
                <h3 id="local"><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div id="main" class="col-sm-6">
          <section id="one">
          <!-- <h2> </h2> -->
        <% if (user.local.email) { %>
          <form action="/messages" method="POST" enctype='multipart/form-data'>
            <input id="name"class="form-control" type="text" name="name" placeholder="name" aria-label="default input example">
            <div id="fileInput" class="mb-3">
              <input type="file" name="file" id="file" class="form-control" type="file" id="formFile">
            </div>
            <button id="btn" type="submit" value="Upload">Submit</button>
          </form>

        <% } %>
          </section>
          <section id="two">
          <ul  class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li  id="post" class="message">
              <span><%= messages[i].name %></span>
              <img src="<%= messages[i].img %>" alt="pic">
              <span class="hide"><%= messages[i].thumbUp %></span>
              <span class="hide"><%= messages[i].thumbDown%></span>
              <span><%= (messages[i].thumbUp - messages[i].thumbDown)%></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>
          </section>

        </div>

</div>

<script src="main.js"></script>

</body>
</html>
